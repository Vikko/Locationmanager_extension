<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <h1>Single distance</h1>
  </div>

  <div data-role="content">
    <div>
      <p>
      <form url="#" name="form_distance" onsubmit="jQuery.ajax( { type: 'POST', url: <%= url_for :action => :update_distance %>} ); return false;" data-ajax="false"> 
        <label>Distance to target: </label>
        <input id="distance_input" type="text"></input>
        <input type="submit" value="Save"/> 
      </form>
      </p>
    </div>
    <div>
      <p>
        <form url="#" name="form_heading" onsubmit="jQuery.ajax( { type: 'POST', url: <%= url_for :action => :update_heading %>} ); return false;" data-ajax="false">
          <label>Heading: </label>
          <input id="heading_input" type="text"></input>
          <input type="submit" value="Save"/>
        </form>
      </p>
    </div>  
    <a href="<%= url_for :action => :submit %>" onclick="stop_heading_interval();">Continue</a>
  </div>
