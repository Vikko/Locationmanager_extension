<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @swing.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @swing.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="swing[lat_start]" class="fieldLabel">Lat start</label>
            <input type="text" id="swing[lat_start]" name="swing[lat_start]" <%= placeholder("Lat start") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="swing[long_start]" class="fieldLabel">Long start</label>
            <input type="text" id="swing[long_start]" name="swing[long_start]" <%= placeholder("Long start") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="swing[lat_end]" class="fieldLabel">Lat end</label>
            <input type="text" id="swing[lat_end]" name="swing[lat_end]" <%= placeholder("Lat end") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="swing[long_end]" class="fieldLabel">Long end</label>
            <input type="text" id="swing[long_end]" name="swing[long_end]" <%= placeholder("Long end") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="swing[heading]" class="fieldLabel">Heading</label>
            <input type="text" id="swing[heading]" name="swing[heading]" <%= placeholder("Heading") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="swing[distance]" class="fieldLabel">Distance</label>
            <input type="text" id="swing[distance]" name="swing[distance]" <%= placeholder("Distance") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
