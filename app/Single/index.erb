<div data-role="page" data-add-back-btn="true">
<script src="/public/js/input_form.js" type="text/javascript"></script>

  <div data-role="header" data-position="inline">
    <h1>Single distance</h1>
  </div>

  <div data-role="content">
    <div>
    <form method="POST" action="<%= url_for :action => :set_distance %>">
      <p>
        <label>Distance to target: </label>
        <input id="distance_input" type="text" name="distance"></input>
      </p>
      <p>
        <label>Heading: </label>
        <input id="heading_input" type="text" name="heading"></input>
        <input id="submit_single" type="submit" value="Continue" onclick="stop_heading_interval();"/>
      </p>
    </form>
    </div>  
    <!--<a href="<%#= url_for :action => :set_distance %>" onclick="stop_heading_interval();">Continue</a>-->
  </div>
</div>
